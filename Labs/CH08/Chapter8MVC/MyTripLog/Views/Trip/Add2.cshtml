@model TripViewModel

<form asp-action="Add" method="post">
	<input type="hidden" asp-for="PageNumber"/>
	<div class="mb-3">
		<label asp-for="Trip.AccomodationPhone" class="form-label">Phone Number</label>
		<input asp-for="Trip.AccomationPhone" class="form-control"/>
	</div>

	<div class="mb-3">
		<label asp-for="Trip.AccomodationEmail" class="form-label">Email address</label>
		<input asp-for="Trip.AccomationEmail" class="form-control" />
	</div>
	<button type="submit" class="btn btn-primary">Next</button>
</form>