@model IEnumerable<Activity>
@{
	ViewBag.Title = "Manage Activites";
}

<h2> Manage Activites</h2>

<div class="m-2">
	<a asp-action="Add" class="btn btn-secondary">Add Activity</a>
</div>

<form asp-action="Delete">
	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>
					Name
				</th>
				<th></th>
			</tr>
		</thead>

		<tbody>
			@foreach (Activity a in Model)
			{
				<tr>
					<td>@a.Name</td>
					<td>
						<button type="submit" name="id" value="@a.activityId"
								class="btn btn-primary">
							Delete
						</button>
					</td>
				</tr>
			}
		</tbody>
	</table>
</form>
