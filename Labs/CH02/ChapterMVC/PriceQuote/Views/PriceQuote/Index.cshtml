@model PriceQuoteModel
@{
	ViewBag.Title = "Price Quote Page";
}
<div class="jumbotron bg-success text-white text-center">
	<h1 class="display-4">Price Quotation</h1>
</div>
<form method="post" asp-action="Index">
<div class="container">
<div class="row">
<div class="col-md-4">
	<div class="form-group row">
		<label class="col-sm-4 col-form-label" asp-for="Subtotal">Subtotal</label>
		<div class="col-sm-8">
			<input asp-for="Subtotal" class="form-control" />
			<span id="subtotalError" class="text-danger"></span>
		</div>
	</div>

	<div class="form-group row">
		<label class="col-sm-4 col-form-label" asp-for="Percent">Percent</label>
		<div class="col-sm-8">
			<input asp-for="Percent" class="form-control" />
			<span id="discountPercentError" class="text-danger"></span>
		</div>
	</div>

	<div class="form-group row">
		<label class="col-sm-4 col-form-label" asp-for="DiscountAmount">Discount Amount</label>
		<div class="col-sm-8">
			<input asp-for="DiscountAmount" class="form-control" readonly value="@Model.DiscountAmount"/>
		</div>
	</div>

	<div class="form-group row">
		<label class="col-sm-4 col-form-label" asp-for="Total">Total</label>
		<div class="col-sm-8">
			<input asp-for="Total" class="form-control" readonly value="@Model.Total"/>
		</div>
	</div>
	<div class="form-group row">
		<div class="col-sm-8 offset-sm-4">
			<button type="submit" class="btn btn-success">Calculate</button>
			<button type="submit" class="btn btn-success">Clear</button>
		</div>
	</div>
	</div>
	</div>
	</div>
</form>

<script>
    

    function clearForm() {
        document.getElementById("Subtotal").value = "";
        document.getElementById("Percent").value = "";
        document.getElementById("DiscountAmount").value = "";
        document.getElementById("Total").value = "";
    }
</script>