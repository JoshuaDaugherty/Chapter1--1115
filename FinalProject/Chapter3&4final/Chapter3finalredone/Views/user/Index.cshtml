@model List<User>
@{
	ViewData["Title"] = "My User List";
}

<table class="table table-bordered tbale-striped header__contents">
	<thead>
		<tr>
			<th>User Name</th>
			<th>Email</th>
			<th>Reason</th>
		</tr>
	</thead>


<tbody class=" head__text">
	@foreach (var user in Model)
	{
		<tr>
			<td>@user.UserName</td>
			<td>@user.Email</td>
			<td>@user.Reason</td>
			<td>
				<a asp-controller="Users" asp-action="Edit" asp-route-id="@user.UserId" asp-route-slug="@user.Slug">Edit</a>
					<a asp-controller="Users" asp-action="Delete" asp-route-id="@user.UserId" asp-route-slug="@user.Slug">Delete</a>
			</td>
		</tr>
	}
</tbody>
</table>

<div class="mb-2">
	<a asp-controller="Users" asp-action="Add" class="btn">Add User</a>
</div>