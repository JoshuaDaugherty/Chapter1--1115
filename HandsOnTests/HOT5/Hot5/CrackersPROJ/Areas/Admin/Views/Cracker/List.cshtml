@model List<Crackers>
@{
    ViewData["Title"] = "Admin Crackers List Page";
}

<a class="btn btn-primary" asp-controller="Cracker" asp-action="Add">Add Product</a>


<table class="table">
    <tr>
        <th>
            Name
        </th>

        <th>
            Invented
        </th>

        <th>
			Price per box
        </th>

        <th>
			Price per bundle
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a asp-controller="Cracker" asp-action="Add" asp-route-id="@item.CrackersId" asp-route-slug="@item.Slug">@Html.DisplayFor(modelItem => item.Name)</a>
            </td>

            <td>
                <a asp-controller="Cracker" asp-action="Add" asp-route-id="@item.CrackersId" asp-route-slug="@item.Slug"> @Html.DisplayFor(modelItem => item.Invented)</a>
            </td>

            <td>
                $@Html.DisplayFor(modelItem => item.Price).00
            </td>

            <td>
                $@Html.DisplayFor(modelItem => item.Calories).00
            </td>

            <td>

                <a asp-action="Delete" asp-controller="Cracker" asp-route-id="@item.CrackersId">Delete</a>


            </td>
        </tr>
    }
</table>
