@model CrackersPROJ.Models.Crackers

@{
    ViewBag.Title = "Cracker Details";
}

<h1>Bike Details</h1>



<div class="row">
    <div class="col"></div>
    <div class="col">
        <div class="card" style="width: 18rem;">
            <img src="@Model.ImageFileName" class="card-img-top" alt="...">
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Name: @Model.Name</li>
                    <li class="list-group-item">Price per box: @Model.Price</li>
                   
                    <li class="list-group-item">Price per bundle: @Model.Calories?.ToString("C")</li>
                    <li class="list-group-item">Date Invented: @Model.Invented</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col"></div>
</div>