@model CrackersPROJ.Models.Crackers
@{
	ViewBag.Title = ViewBag.Action;
}

<h1>Add Product</h1>

<form asp-action="AddEdit" method="post">
	<div asp-validation-summary="All"></div>
	<div class="form-floating mb-3">
		<input class="form-control" id="floatingName" placeholder=" Name" asp-for="Name">
		<label for="floatingName" asp-for="Name"> Name</label>
	</div>

	<div class="form-floating mb-3">
		<input class="form-control" id="floatingInvented" placeholder="Invented" asp-for="Invented">
		<label for="floatingInvented" asp-for="Invented">Invented</label>
	</div>

	<div class="form-floating mb-3">
		<input class="form-control" id="floatingPrice" placeholder="Price per box" asp-for="Price">
		<label for="floatingPrice" asp-for="Price">Price per box</label>
	</div>

	<div class="form-floating mb-3">
		<input class="form-control" id="floatingCalories" placeholder="Price per Bundel" asp-for="Calories">
		<label for="floatingCalories" asp-for="Calories">Price per bundle</label>
	</div>

	
	<input type="hidden" asp-for="CrackersId" />

	<button type="submit" class="btn btn-primary">Save</button>


</form>