@model List<Appointments>
@{
    ViewData["Title"] = "Admin Appointment List Page";
}

<a class="btn btn-primary" asp-controller="Appointment" asp-action="Add">Add Appointmnent</a>


<table class="table">
    <tr>
        <th>
            Start Time
        </th>

        <th>
            AppointmentId
        </th>

       
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a asp-controller="Appointment" asp-action="Add" asp-route-id="@item.AppointmentsId" >@Html.DisplayFor(modelItem => item.StartTime)</a>
            </td>

            <td>
                <a asp-controller="Appointment" asp-action="Add" asp-route-id="@item.AppointmentsId"> @Html.DisplayFor(modelItem => item.AppointmentsId)</a>
            </td>

            

            <td>

                <a asp-action="Delete" asp-controller="Appointment" asp-route-id="@item.AppointmentsId">Delete</a>


            </td>
        </tr>
    }
</table>
